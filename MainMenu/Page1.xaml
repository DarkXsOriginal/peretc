<Page x:Class="MainMenu.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <ComboBox x:Name="СmbBoardSelection" HorizontalAlignment="Left" Margin="333,57,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="91,60,0,0" TextWrapping="Wrap" Text="Выберите доску которую хотите скачать" VerticalAlignment="Top" Height="22" Cursor="" Width="237"/>
        <TextBox x:Name="TxtBoxForOutput" HorizontalAlignment="Left" Margin="333,129,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="110,129,0,0" TextWrapping="Wrap" Text="Укажите папку для загрузки файлов" VerticalAlignment="Top"/>
        <Button x:Name="ButtonReview" Content="Обзор" HorizontalAlignment="Left" Margin="486,129,0,0" VerticalAlignment="Top" Height="19" Width="47"/>
        <TextBlock HorizontalAlignment="Left" Margin="133,0,0,0" TextWrapping="Wrap" Text="Размер файлов" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtBoxForFilesSized" HorizontalAlignment="Left" Margin="238,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="109,266,0,0" TextWrapping="Wrap" Text="Количество файлов" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtBoxForNumberOfFiles" HorizontalAlignment="Left" Margin="238,266,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="453,246,0,0" TextWrapping="Wrap" Text="Время загрузки" VerticalAlignment="Top" RenderTransformOrigin="0.45,0.698"/>
        <TextBox x:Name="TxtBoxForLoadingTime" HorizontalAlignment="Left" Margin="565,246,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ButtonForDownloading" Content="Загрузить" HorizontalAlignment="Center" Margin="0,360,0,0" VerticalAlignment="Top" Width="140"/>
    </Grid>
</Page>
